@model DOAN.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/indexLayout.cshtml";
}

<link href="~/Content/csscreatecate.css" rel="stylesheet" />
<h2 style="margin:35px">Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-form-create">
        <div class="create-category">
            <h2>Tạo Danh Mục</h2>
            <form action="#" method="post">
                <div class="form-group">
                    @Html.LabelFor(model => model.TENLOAIHANG, htmlAttributes: new { @class = "category-name" })
                    @*<label for="category-name">Tên loại hàng:</label>*@
                    @Html.EditorFor(model => model.TENLOAIHANG, new { htmlAttributes = new { @class = "add-create" } })
                    @Html.ValidationMessageFor(model => model.TENLOAIHANG, "", new { @class = "text-danger" })
                    @*<input type="text" id="category-name" name="category-name" required>*@
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MALOAIHANG, htmlAttributes: new { @class = "category-code" })
                    @*<label for="category-code">Mã loại hàng:</label>*@
                    @Html.EditorFor(model => model.MALOAIHANG, new { htmlAttributes = new { @class = "add-create" } })
                    @*@Html.DisplayFor(model => model.MALOAIHANG)*@
                    @Html.ValidationMessageFor(model => model.MALOAIHANG, "", new { @class = "text-danger" })
                    @*<input type="text" id="category-code" name="category-code" required>*@
                </div>

                <button type="submit">Tạo Danh Mục</button>
                <button>@Html.ActionLink("Quay Về Trang List", "Index")</button>
            </form>
        </div>
    </div>
    <div>

    </div>
}
