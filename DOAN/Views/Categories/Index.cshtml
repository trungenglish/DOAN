@model IEnumerable<DOAN.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/indexLayout.cshtml";
}

<link href="~/Content/Csstable/csstable.css" rel="stylesheet" />

<style>
    .create-button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: 1px solid #3498db;
        color: #fff;
        background-color: #3498db;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .create-button:hover {
            background-color: #2980b9;
        }

</style>
<h2 class="margin35px">QUẢN LÝ LOẠI HÀNG</h2>

@Html.ActionLink("Tạo Mới", "Create", "Categories", new { @class = "btn btn-primary create-button" })

@using (Html.BeginForm("Index", "Categories", FormMethod.Get))
{
    <table>
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    Mã Hàng
                </th>
                <th>
                    Tên Loại Hàng
                </th>
                <th class="none">

                </th>
                <th class="none">

                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" class="checkbox" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MALOAIHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TENLOAIHANG)
                </td>
                <td class="add-border">@Html.ActionLink("Sửa", "Edit", new { id = item.MALOAIHANG })</td>
                <td class="add-border">@Html.ActionLink("Xóa", "Delete", new { id = item.MALOAIHANG })</td>

            </tr>
        }

    </table>

    <button id="selectAll" type="button">Chọn tất cả</button>
    <button id="deselectAll" type="button">Bỏ chọn tất cả</button>

    <script>
        var selectAllButton = document.getElementById("selectAll");
        var deselectAllButton = document.getElementById("deselectAll");
        var checkboxes = document.getElementsByClassName("checkbox");

        selectAllButton.addEventListener("click", function () {
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = true;
            }
        });

        deselectAllButton.addEventListener("click", function () {
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = false;
            }
        });
    </script>

}