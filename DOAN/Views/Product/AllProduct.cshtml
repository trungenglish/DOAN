@model IEnumerable<DOAN.Models.Product>

<div class="block1">
    <h3><span clss="block1-content">Cà Phê HighLand</span></h3>
    <div class="block1-wrap">
        @{
            int highlandcafe = 1;
            var outitem = Model.Where(s => s.Category != null && s.Category.MALOAIHANG == highlandcafe);
        }
        @foreach (var pro in outitem)
        {
            <div class="menu-items">
                <a href="/Product/ProductDetails/@pro.MASP">
                    <div class="menu-items-image">

                        <img src="@Url.Content(pro.HINHSP)" />
                    </div>
                </a>
                <div class="menu-items-info">
                    <h3>
                        <a href="">@Html.DisplayFor(model => pro.TENSP)</a>
                    </h3>
                    <div class="price-product-items">@Html.DisplayFor(model => pro.GIa) </div>
                    <a href="/GioHang/AddToCart/@pro.MASP" class="btn btn-default">
                        Buy
                    </a>
                </div>
            </div>
        }
    </div>
</div>
